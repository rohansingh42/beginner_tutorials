<launch>

  <arg 
    name="pubHz" 
    default="20" 
  />

  <arg
    name="record"
    default="false"
  />

  <node 
    pkg="beginner_tutorials" 
    name="talker" 
    type="talker"
    output="screen"
    args= "$(arg pubHz)"
  />

  <node
    pkg="beginner_tutorials"
    name="listener"
    type="listener"
    output="screen"
    launch-prefix="gnome-terminal --command"
  />

  <node
    pkg="beginner_tutorials"
    name="record"
    type="record"
    args="-a -o $(find beginner_tutorials)/results/allNodesRecord"
    if="$(arg record)"
  />
</launch>

